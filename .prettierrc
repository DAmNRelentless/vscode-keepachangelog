{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "insertPragma": false,
  "printWidth": 120,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "none",
  "useTabs": false,
  "plugins": ["./node_modules/prettier-plugin-packagejson"],
  "overrides": [
    {
      "files": "*.{json,yml,yaml,prettierrc,eslintrc}",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
